<div class="wrapper-contact">
  <div class="title-contact">
    <h2>Collaborons</h2>
  </div>
  <div class="container-contact">
    <div class="contact-infos">
      <img src="" alt="Image" />
      <p>Numéro de téléphone : XX XX XX XX XX</p>
      <p>Adresse e-mail : adresse@domaine.com</p>
      <p>Adresse postale : XX Rue, Ville, Pays</p>

    </div>
    <div class="contact-form">
      <%= simple_form_for :contact, url: create_contact_path do |f| %>
        <%= f.input :name, label: 'Nom', required: true %>
        <%= f.input :email, label: 'Email', required: true %>
        <%= f.input :phone, label: 'Téléphone', required: true %>
        <%= f.input :company, label: 'Entreprise', required: true %>
        <%= f.input :city, label: 'Ville', required: true  %>
        <%= f.input :subject, label: 'Sujet', required: true %>
        <%= f.input :body, label: 'Message', as: :text, required: true, input_html: { class: 'autoresize', contenteditable: true } %>
        <%= f.button :submit, 'Envoyer', class: 'btn-submit' %>
      <% end %>
    </div>
  </div>
</div>
