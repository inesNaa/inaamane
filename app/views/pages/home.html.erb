<%= render "shared/banner" %>

<div class="contact">
  <h2>Collaborons</h2>
</div>
<div class="form">
  <%= simple_form_for :contact, url: create_contact_path do |f| %>
    <%= f.input :name, label: 'Nom', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :email, label: 'Email', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :phone, label: 'Téléphone', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :company, label: 'Entreprise', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :city, label: 'Ville', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :subject, label: 'Sujet', required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.input :body, label: 'Message', as: :text, required: true, wrapper_html: { class: 'form-row' } %>
    <%= f.button :submit, 'Envoyer', class: 'btn-submit' %>
  <% end %>
</div>
